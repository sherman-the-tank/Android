<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    
	<CheckBox
	    android:id="@+id/dish_list_item_orderCheckBox"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:layout_alignParentRight="true"
	    android:enabled="false"
	    android:padding="4dp"
	    />
	
	<TextView 
	    android:id="@+id/dish_list_item_title"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_toLeftOf="@id/dish_list_item_orderCheckBox"
	    android:textStyle="bold"
	    android:paddingLeft="4dp"
	    android:paddingRight="4dp"
	    android:text="Dish Title"
	    />
	
	<TextView 
	    android:id="@+id/dish_list_item_price"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/dish_list_item_title"
	    android:layout_toLeftOf="@id/dish_list_item_orderCheckBox"
	    android:textStyle="bold"
	    android:paddingLeft="4dp"
	    android:paddingRight="4dp"
	    android:text="Dish Price"
	    />	
</RelativeLayout>
